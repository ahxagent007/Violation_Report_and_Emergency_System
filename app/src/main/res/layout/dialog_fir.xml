<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="40dp"
    android:background="@drawable/bg_box_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a new FIR"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="5dp"/>

    <Spinner
        android:id="@+id/SP_fir_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/fir_list"
        android:padding="10dp"
        android:layout_margin="5dp"
        />
    <EditText
        android:id="@+id/ET_against"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIR Against Name"
        android:textSize="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/bg_box_white"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/ET_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Details"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:background="@drawable/bg_box_white"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/ET_against_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIR Against Address"
        android:textSize="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/bg_box_white"
        android:layout_margin="5dp"/>


    <Button
        android:id="@+id/btn_fir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIR"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/pressed_blue"
        android:textColor="#FFFFFF"/>

</LinearLayout>